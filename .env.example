# =============================================================================
# AUTH MICROSERVICE - ENVIRONMENT VARIABLES TEMPLATE
# =============================================================================
# Copy this file to .env and configure your environment-specific values
# Never commit .env files to version control

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_ENV=development
APP_NAME=auth-microservice
APP_VERSION=1.0.0
SERVER_PORT=8080
LOG_LEVEL=INFO

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DB_HOST=localhost
DB_PORT=5432
DB_NAME=auth_microservice
DB_USERNAME=auth_user
DB_PASSWORD=change_this_password

# Database Pool Configuration
DB_POOL_MAX_SIZE=20
DB_POOL_MAX_WAIT_QUEUE=50
DB_CONNECTION_TIMEOUT=30000
DB_IDLE_TIMEOUT=600000

# Database Reconnection Configuration
DB_RECONNECT_ATTEMPTS=3
DB_RECONNECT_INTERVAL=1000

# Health Check Configuration
DB_HEALTH_CHECK_INTERVAL=30000

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=change_this_redis_password
REDIS_DATABASE=0
REDIS_CONNECTION_TIMEOUT=5000
REDIS_COMMAND_TIMEOUT=3000

# =============================================================================
# JWT CONFIGURATION
# =============================================================================
JWT_SECRET=your-super-secret-jwt-key-change-in-production-must-be-at-least-256-bits
JWT_ISSUER=auth-microservice
JWT_ACCESS_TOKEN_EXPIRY=900
JWT_REFRESH_TOKEN_EXPIRY=604800

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Password hashing
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_LOGIN_ATTEMPTS=5
RATE_LIMIT_LOGIN_WINDOW_MINUTES=15
RATE_LIMIT_LOGIN_BLOCK_MINUTES=60
RATE_LIMIT_API_REQUESTS_PER_MINUTE=100

# CORS Configuration
CORS_ENABLED=true
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8080
CORS_ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Content-Type,Authorization,X-Requested-With
CORS_MAX_AGE=3600

# =============================================================================
# MONITORING & OBSERVABILITY
# =============================================================================
METRICS_ENABLED=true
METRICS_PORT=9090
HEALTH_CHECK_ENABLED=true
HEALTH_CHECK_PORT=8081

# Logging
LOG_FORMAT=json
LOG_FILE_ENABLED=false
LOG_FILE_PATH=logs/auth-microservice.log
LOG_FILE_MAX_SIZE=10MB
LOG_FILE_MAX_FILES=5

# =============================================================================
# EXTERNAL SERVICES
# =============================================================================
# Email Service (for notifications)
EMAIL_ENABLED=false
EMAIL_SMTP_HOST=smtp.gmail.com
EMAIL_SMTP_PORT=587
EMAIL_SMTP_USERNAME=your-email@gmail.com
EMAIL_SMTP_PASSWORD=your-app-password
EMAIL_FROM_ADDRESS=noreply@auth-microservice.com
EMAIL_FROM_NAME=Auth Microservice

# GeoLocation Service
GEOLOCATION_ENABLED=true
GEOLOCATION_API_KEY=your-geolocation-api-key
GEOLOCATION_TIMEOUT=5000

# =============================================================================
# DEVELOPMENT SPECIFIC
# =============================================================================
# Hot reload and development features
DEV_MODE=true
DEV_AUTO_RELOAD=true
DEV_MOCK_EXTERNAL_SERVICES=true

# Test Database (for integration tests)
TEST_DB_HOST=localhost
TEST_DB_PORT=5433
TEST_DB_NAME=auth_microservice_test
TEST_DB_USERNAME=test_user
TEST_DB_PASSWORD=test_password